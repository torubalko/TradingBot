<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:system="clr-namespace:System;assembly=mscorlib" xmlns:themes="http://schemas.actiprosoftware.com/winfx/xaml/themes" xmlns:controls="clr-namespace:ActiproSoftware.Windows.Controls">
  <Style x:Key="BothResizeGripperStyle" TargetType="{x:Type Thumb}">
    <Setter Property="FrameworkElement.Cursor" Value="SizeNWSE" />
    <Setter Property="HorizontalAlignment" Value="Right" />
    <Setter Property="MinHeight" Value="{x:Static SystemParameters.HorizontalScrollBarHeight}" />
    <Setter Property="MinWidth" Value="{x:Static SystemParameters.VerticalScrollBarWidth}" />
    <Setter Property="UIElement.SnapsToDevicePixels" Value="True" />
    <Setter Property="VerticalAlignment" Value="Bottom" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Thumb}">
          <Grid Background="{TemplateBinding Control.Background}" SnapsToDevicePixels="True">
            <Path HorizontalAlignment="Right" VerticalAlignment="Bottom" Fill="{DynamicResource {x:Static themes:AssetResourceKeys.GripperHighlightNormalBrushKey}}" Margin="0,0,3,3" Data="M8,0 L10,0 L10,2 L8,2 M4,4 L6,4 L6,6 L4,6 M8,4 L10,4 L10,6 L8,6 M0,8 L2,8 L2,10 L0,10 M4,8 L6,8 L6,10 L4,10 M8,8 L10,8 L10,10 L8,10" />
            <Path HorizontalAlignment="Right" VerticalAlignment="Bottom" Fill="{TemplateBinding Control.Foreground}" Margin="0,0,4,4" Data="M8,0 L10,0 L10,2 L8,2 M4,4 L6,4 L6,6 L4,6 M8,4 L10,4 L10,6 L8,6 M0,8 L2,8 L2,10 L0,10 M4,8 L6,8 L6,10 L4,10 M8,8 L10,8 L10,10 L8,10" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Style.Triggers>
      <Trigger Property="FlowDirection" Value="RightToLeft">
        <Setter Property="FrameworkElement.Cursor" Value="SizeNESW" />
      </Trigger>
    </Style.Triggers>
  </Style>
  <Style x:Key="HorizontalResizeGripperStyle" TargetType="{x:Type Thumb}">
    <Setter Property="HorizontalAlignment" Value="Right" />
    <Setter Property="FrameworkElement.Cursor" Value="SizeWE" />
    <Setter Property="MinHeight" Value="28" />
    <Setter Property="MinWidth" Value="5" />
    <Setter Property="UIElement.SnapsToDevicePixels" Value="True" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Thumb}">
          <Grid Background="{TemplateBinding Control.Background}" SnapsToDevicePixels="True">
            <Path HorizontalAlignment="Center" VerticalAlignment="Center" Fill="{DynamicResource {x:Static themes:AssetResourceKeys.GripperHighlightNormalBrushKey}}" Margin="1,1,0,0" Data="M0,0 L0,2 L2,2 L2,0 M0,5 L0,7 L2,7 L2,5 M0,10 L0,12 L2,12 L2,10 M0,15 L0,17 L2,17 L2,15" />
            <Path HorizontalAlignment="Center" VerticalAlignment="Center" Fill="{TemplateBinding Control.Foreground}" Margin="0,0,1,1" Data="M0,0 L0,2 L2,2 L2,0 M0,5 L0,7 L2,7 L2,5 M0,10 L0,12 L2,12 L2,10 M0,15 L0,17 L2,17 L2,15" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="VerticalResizeGripperStyle" TargetType="{x:Type Thumb}">
    <Setter Property="FrameworkElement.Cursor" Value="SizeNS" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="MinHeight" Value="5" />
    <Setter Property="MinWidth" Value="28" />
    <Setter Property="UIElement.SnapsToDevicePixels" Value="True" />
    <Setter Property="VerticalAlignment" Value="Bottom" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Thumb}">
          <Grid Background="{TemplateBinding Control.Background}" SnapsToDevicePixels="True">
            <Path HorizontalAlignment="Center" VerticalAlignment="Center" Fill="{DynamicResource {x:Static themes:AssetResourceKeys.GripperHighlightNormalBrushKey}}" Margin="1,1,0,0" Data="M0,0 L2,0 L2,2 L0,2 M5,0 L7,0 L7,2 L5,2 M10,0 L12,0 L12,2 L10,2 M15,0 L17,0 L17,2 L15,2" />
            <Path HorizontalAlignment="Center" VerticalAlignment="Center" Fill="{TemplateBinding Control.Foreground}" Margin="0,0,1,1" Data="M0,0 L2,0 L2,2 L0,2 M5,0 L7,0 L7,2 L5,2 M10,0 L12,0 L12,2 L10,2 M15,0 L17,0 L17,2 L15,2" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="{x:Type controls:ResizableContentControl}" TargetType="{x:Type controls:ResizableContentControl}">
    <Setter Property="controls:ResizableContentControl.GripperForeground" Value="{DynamicResource {x:Static themes:AssetResourceKeys.GripperForegroundNormalBrushKey}}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type controls:ResizableContentControl}">
          <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" Background="{TemplateBinding Control.Background}">
            <Grid>
              <ContentPresenter Name="PART_Presenter" Content="{TemplateBinding ContentControl.Content}" ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}" ContentTemplateSelector="{TemplateBinding ContentControl.ContentTemplateSelector}" Margin="{TemplateBinding Control.Padding}" />
              <Thumb Name="PART_Gripper" Background="{TemplateBinding controls:ResizableContentControl.GripperBackground}" Foreground="{TemplateBinding controls:ResizableContentControl.GripperForeground}" Style="{StaticResource BothResizeGripperStyle}" />
            </Grid>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="controls:ResizableContentControl.ResizeMode" Value="None">
              <Setter TargetName="PART_Gripper" Property="Visibility" Value="Collapsed" />
            </Trigger>
            <Trigger Property="controls:ResizableContentControl.ResizeMode" Value="Horizontal">
              <Setter TargetName="PART_Gripper" Property="Style" Value="{StaticResource HorizontalResizeGripperStyle}" />
            </Trigger>
            <Trigger Property="controls:ResizableContentControl.ResizeMode" Value="Vertical">
              <Setter TargetName="PART_Gripper" Property="Style" Value="{StaticResource VerticalResizeGripperStyle}" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>