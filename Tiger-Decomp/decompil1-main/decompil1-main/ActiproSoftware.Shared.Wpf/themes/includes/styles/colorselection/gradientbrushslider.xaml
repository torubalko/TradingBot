<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:colorSelection="clr-namespace:ActiproSoftware.Windows.Controls.ColorSelection" xmlns:colorSelectionPrimitives="clr-namespace:ActiproSoftware.Windows.Controls.ColorSelection.Primitives">
  <DrawingBrush x:Key="CheckerBackgroundBrush" Viewport="0,0,10,10" TileMode="Tile" ViewportUnits="Absolute">
    <DrawingBrush.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="#FFFFFFFF">
          <GeometryDrawing.Geometry>
            <RectangleGeometry Rect="0,0 100,100" />
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
        <GeometryDrawing Brush="#FFD3D3D3">
          <GeometryDrawing.Geometry>
            <GeometryGroup>
              <RectangleGeometry Rect="0,0 50,50" />
              <RectangleGeometry Rect="50,50 50,50" />
            </GeometryGroup>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingBrush.Drawing>
  </DrawingBrush>
  <Style x:Key="{x:Type colorSelectionPrimitives:GradientBrushThumb}" TargetType="{x:Type colorSelectionPrimitives:GradientBrushThumb}">
    <Setter Property="Background" Value="#FFFFFFFF" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type colorSelectionPrimitives:GradientBrushThumb}">
          <Grid>
            <Path Data="M0.5,12.5 L0.5,4 L4.5,0 L5.5,0 L9.5,4 L9.5,12.5" Stroke="#FFFFFF" StrokeThickness="1" />
            <Path Data="M1.5,11.5 L1.5,5.5 L8.5,5.5 L8.5,11.5" Stroke="#404040" Fill="{TemplateBinding Control.Background}" StrokeLineJoin="Round" />
            <Path Name="header" Data="M1.5,5.5 L1.5,4.5 L4.5,1.5 L5.5,1.5 L8.5,4.5 L8.5,5.5" Stroke="#404040" Fill="#AAAAAA" StrokeLineJoin="Round" />
          </Grid>
          <ControlTemplate.Triggers>
            <Trigger Property="colorSelectionPrimitives:GradientBrushThumb.IsSelected" Value="True">
              <Setter TargetName="header" Property="Shape.Fill" Value="#000000" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Style.Triggers>
      <Trigger Property="colorSelectionPrimitives:GradientBrushThumb.Orientation" Value="Vertical">
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type colorSelectionPrimitives:GradientBrushThumb}">
              <Grid HorizontalAlignment="Right">
                <FrameworkElement.LayoutTransform>
                  <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5" />
                </FrameworkElement.LayoutTransform>
                <Path Data="M0.5,12.5 L0.5,4 L4.5,0 L5.5,0 L9.5,4 L9.5,12.5" Stroke="#FFFFFF" StrokeThickness="1" />
                <Path Data="M1.5,11.5 L1.5,5.5 L8.5,5.5 L8.5,11.5" Stroke="#404040" Fill="{TemplateBinding Control.Background}" StrokeLineJoin="Round" />
                <Path Name="header" Data="M1.5,5.5 L1.5,4.5 L4.5,1.5 L5.5,1.5 L8.5,4.5 L8.5,5.5" Stroke="#404040" Fill="#AAAAAA" StrokeLineJoin="Round" />
              </Grid>
              <ControlTemplate.Triggers>
                <Trigger Property="colorSelectionPrimitives:GradientBrushThumb.IsSelected" Value="True">
                  <Setter TargetName="header" Property="Shape.Fill" Value="#000000" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Trigger>
      <Trigger Property="colorSelectionPrimitives:GradientBrushThumb.IsSelected" Value="true">
        <Setter Property="Panel.ZIndex" Value="1" />
      </Trigger>
    </Style.Triggers>
  </Style>
  <Style x:Key="{x:Type colorSelection:GradientBrushSlider}" TargetType="{x:Type colorSelection:GradientBrushSlider}">
    <Setter Property="Background" Value="#00FFFFFF" />
    <Setter Property="BorderBrush" Value="#00FFFFFF" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Height" Value="20" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type colorSelection:GradientBrushSlider}">
          <Border Background="{TemplateBinding Control.Background}" BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" Height="{TemplateBinding FrameworkElement.Height}">
            <Grid>
              <Border BorderBrush="#CFCFCF" BorderThickness="1" Margin="0,0,0,9" Background="{StaticResource CheckerBackgroundBrush}">
                <Rectangle Name="PART_Spectrum" Fill="{Binding Path=ActiveGradientBrush, RelativeSource={RelativeSource TemplatedParent}}" />
              </Border>
              <colorSelectionPrimitives:GradientBrushThumbPanel x:Name="PART_ThumbPanel" Margin="1,0" />
            </Grid>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="Width" Value="Auto">
              <Setter Property="MinWidth" Value="20" />
            </Trigger>
            <Trigger Property="Height" Value="Auto">
              <Setter Property="MinHeight" Value="20" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Style.Triggers>
      <Trigger Property="colorSelection:GradientBrushSlider.Orientation" Value="Vertical">
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Width" Value="20" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type colorSelection:GradientBrushSlider}">
              <Border Background="{TemplateBinding Control.Background}" BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" Height="{TemplateBinding FrameworkElement.Height}">
                <Grid>
                  <Border BorderBrush="#CFCFCF" BorderThickness="1" Margin="0,0,9,0" Background="{StaticResource CheckerBackgroundBrush}">
                    <Rectangle Name="PART_Spectrum" Fill="{Binding Path=ActiveGradientBrush, RelativeSource={RelativeSource TemplatedParent}}" />
                  </Border>
                  <colorSelectionPrimitives:GradientBrushThumbPanel x:Name="PART_ThumbPanel" Orientation="Vertical" Margin="0,1" />
                </Grid>
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="Width" Value="Auto">
                  <Setter Property="MinWidth" Value="20" />
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                  <Setter Property="MinHeight" Value="20" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Trigger>
    </Style.Triggers>
  </Style>
</ResourceDictionary>