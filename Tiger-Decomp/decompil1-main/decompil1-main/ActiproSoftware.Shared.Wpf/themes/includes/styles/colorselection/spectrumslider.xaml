<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:colorSelection="clr-namespace:ActiproSoftware.Windows.Controls.ColorSelection">
  <Style x:Key="SliderThumbStyle" TargetType="{x:Type Thumb}">
    <Setter Property="FrameworkElement.OverridesDefaultStyle" Value="True" />
    <Setter Property="Background" Value="#FF000000" />
    <Setter Property="Focusable" Value="False" />
    <Setter Property="Height" Value="11" />
    <Setter Property="Margin" Value="0,-5,0,-5" />
    <Setter Property="IsTabStop" Value="False" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Thumb}">
          <Grid>
            <Path HorizontalAlignment="Left" Data="M0,0 L0,10 L5,5" Fill="{TemplateBinding Control.Background}" Stroke="#FFFFFFFF" />
            <Path HorizontalAlignment="Right" Data="M5,0 L0,5 L5,10" Fill="{TemplateBinding Control.Background}" Stroke="#FFFFFFFF" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="{x:Type colorSelection:SpectrumSlider}" TargetType="{x:Type colorSelection:SpectrumSlider}">
    <Setter Property="Background" Value="#00FFFFFF" />
    <Setter Property="BorderBrush" Value="#00FFFFFF" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Slider.IsSnapToTickEnabled" Value="True" />
    <Setter Property="RangeBase.Maximum" Value="360" />
    <Setter Property="RangeBase.Minimum" Value="0" />
    <Setter Property="Slider.Orientation" Value="Vertical" />
    <Setter Property="Slider.TickFrequency" Value="0.001" />
    <Setter Property="Width" Value="20" />
    <Setter Property="RangeBase.Value" Value="0.5" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type colorSelection:SpectrumSlider}">
          <Border Background="{TemplateBinding Control.Background}" BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" Height="{TemplateBinding FrameworkElement.Height}">
            <Grid>
              <Rectangle Name="PART_Spectrum" Fill="{Binding Path=ColorSpectrumBrush, RelativeSource={RelativeSource TemplatedParent}}" />
              <Border BorderBrush="#40FFFFFF" BorderThickness="1" />
              <Track Name="PART_Track" Grid.Column="1">
                <Track.Thumb>
                  <Thumb Style="{StaticResource SliderThumbStyle}" />
                </Track.Thumb>
              </Track>
            </Grid>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="Width" Value="Auto">
              <Setter Property="MinWidth" Value="20" />
            </Trigger>
            <Trigger Property="Height" Value="Auto">
              <Setter Property="MinHeight" Value="20" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>