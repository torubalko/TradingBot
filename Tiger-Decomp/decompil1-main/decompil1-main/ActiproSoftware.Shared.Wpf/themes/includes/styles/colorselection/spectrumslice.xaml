<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:presentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" xmlns:colorSelection="clr-namespace:ActiproSoftware.Windows.Controls.ColorSelection">
  <Style x:Key="{x:Type colorSelection:SpectrumSlice}" TargetType="{x:Type colorSelection:SpectrumSlice}">
    <Setter Property="FrameworkElement.Cursor" Value="Cross" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type colorSelection:SpectrumSlice}">
          <Border ClipToBounds="True" Background="{TemplateBinding colorSelection:SpectrumSlice.BaseColorBrush}">
            <Path Name="PART_Marker" StrokeThickness="1" IsHitTestVisible="False" Stroke="#FFFFFFFF" SnapsToDevicePixels="True">
              <Path.Data>
                <EllipseGeometry RadiusX="5.5" RadiusY="5.5" />
              </Path.Data>
            </Path>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>