<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:ActiproSoftware.Windows.Controls">
  <Style x:Key="{x:Type controls:AdvancedTextBlock}" TargetType="{x:Type controls:AdvancedTextBlock}">
    <Setter Property="Focusable" Value="False" />
    <Setter Property="IsTabStop" Value="False" />
    <Setter Property="ToolTipService.Placement" Value="Relative" />
    <Setter Property="ToolTipService.HorizontalOffset" Value="-12" />
    <Setter Property="ToolTipService.VerticalOffset" Value="-5" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type controls:AdvancedTextBlock}">
          <TextBlock Name="PART_TextBlock" TextTrimming="{TemplateBinding controls:AdvancedTextBlock.TextTrimming}" />
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>