<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:themes="clr-namespace:ActiproSoftware.Windows.Themes">
  <Style x:Key="{x:Static themes:SharedResourceKeys.ToggleButtonExpansionStyleKey}" TargetType="{x:Type ToggleButton}">
    <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:AssetResourceKeys.ListToggleButtonExpanderGlyphBackgroundNormalBrushKey}}" />
    <Setter Property="Width" Value="16" />
    <Setter Property="Height" Value="16" />
    <Setter Property="Focusable" Value="False" />
    <Setter Property="HorizontalAlignment" Value="Right" />
    <Setter Property="Margin" Value="2,0" />
    <Setter Property="UIElement.SnapsToDevicePixels" Value="True" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ToggleButton}">
          <Border Width="16" Height="16" Background="#00FFFFFF">
            <ContentPresenter Name="glyphPresenter" ContentTemplate="{DynamicResource {x:Static themes:SharedResourceKeys.TreeItemCollapsedGlyphTemplateKey}}" TextElement.Foreground="{TemplateBinding Control.Foreground}" HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="ToggleButton.IsChecked" Value="True">
              <Setter TargetName="glyphPresenter" Value="{DynamicResource {x:Static themes:SharedResourceKeys.TreeItemExpandedGlyphTemplateKey}}" Property="ContentPresenter.ContentTemplate" />
              <Setter Value="{DynamicResource {x:Static themes:AssetResourceKeys.ListToggleButtonExpanderGlyphBackgroundCheckedBrushKey}}" Property="Foreground" />
            </Trigger>
            <Trigger Property="UIElement.IsMouseOver" Value="True">
              <Setter Value="{DynamicResource {x:Static themes:AssetResourceKeys.ListToggleButtonExpanderGlyphBackgroundHoverBrushKey}}" Property="Foreground" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>