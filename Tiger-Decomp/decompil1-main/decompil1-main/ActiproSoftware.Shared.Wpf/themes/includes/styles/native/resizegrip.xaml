<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:themes="clr-namespace:ActiproSoftware.Windows.Themes">
  <Style x:Key="{x:Static themes:SharedResourceKeys.ResizeGripStyleKey}" TargetType="{x:Type Control}">
    <Setter Property="Background" Value="{DynamicResource {x:Static themes:AssetResourceKeys.GripperBackgroundNormalBrushKey}}" />
    <Setter Property="BorderBrush" Value="{DynamicResource {x:Static themes:AssetResourceKeys.GripperHighlightNormalBrushKey}}" />
    <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:AssetResourceKeys.GripperForegroundNormalBrushKey}}" />
    <Setter Property="MinWidth" Value="{DynamicResource {x:Static SystemParameters.VerticalScrollBarWidthKey}}" />
    <Setter Property="MinHeight" Value="{DynamicResource {x:Static SystemParameters.HorizontalScrollBarHeightKey}}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Control}">
          <Border SnapsToDevicePixels="true" Background="{TemplateBinding Control.Background}" Padding="{TemplateBinding Control.Padding}">
            <Grid>
              <Path HorizontalAlignment="Right" VerticalAlignment="Bottom" Fill="{TemplateBinding Control.BorderBrush}" Margin="0,0,3,3" Data="M8,0 L10,0 L10,2 L8,2 M4,4 L6,4 L6,6 L4,6 M8,4 L10,4 L10,6 L8,6 M0,8 L2,8 L2,10 L0,10 M4,8 L6,8 L6,10 L4,10 M8,8 L10,8 L10,10 L8,10" />
              <Path HorizontalAlignment="Right" VerticalAlignment="Bottom" Fill="{TemplateBinding Control.Foreground}" Margin="0,0,4,4" Data="M8,0 L10,0 L10,2 L8,2 M4,4 L6,4 L6,6 L4,6 M8,4 L10,4 L10,6 L8,6 M0,8 L2,8 L2,10 L0,10 M4,8 L6,8 L6,10 L4,10 M8,8 L10,8 L10,10 L8,10" />
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="{x:Static themes:SharedResourceKeys.StatusBarEmbeddedResizeGripStyleKey}" TargetType="{x:Type Control}" BasedOn="{StaticResource {x:Static themes:SharedResourceKeys.ResizeGripStyleKey}}">
    <Setter Property="BorderBrush" Value="{DynamicResource {x:Static themes:AssetResourceKeys.StatusBarGripperHighlightNormalBrushKey}}" />
    <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:AssetResourceKeys.StatusBarGripperForegroundNormalBrushKey}}" />
  </Style>
</ResourceDictionary>